@page
@model OnlineShop.Pages.EditProductModel
@{
}
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="@Model.SelecedProduct.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.Name" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.Title" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.Description" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.Price" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.Color" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.Color" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelecedProduct.CategoryId" class="control-label"></label>
                <input asp-for="@Model.SelecedProduct.CategoryId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="SelecedProduct.Id" type="hidden"/>
                <button type="submit" class="btn btn-outline-danger">Edit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}